<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="75dp"
    android:background="@color/lightblue2"><![CDATA[


    />





    ]]>

    <Button
        android:id="@+id/replay_button"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:text="@string/replay_button_text"
        android:background="@color/lightyellow"
        style="@style/AlertDialog.AppCompat"
        android:layout_below="@+id/lost_message"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:text="@string/exit_button_text"
        android:background="@color/lightyellow"
        style="@style/AlertDialog.AppCompat"
        android:layout_alignTop="@+id/replay_button"
        android:layout_toEndOf="@+id/replay_button"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lost_message"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:text="@string/lost_message_text"
        android:textSize="12dp" />
</RelativeLayout>