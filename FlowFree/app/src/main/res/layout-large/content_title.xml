<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.TitleActivity"
    tools:showIn="@layout/activity_title"
    android:background="@color/darkgray">

    <Button
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:text="@string/title_start_button_text"
        android:id="@+id/title_start_button"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/title_image"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:background="@color/lightblue1" />

    <Button
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:text="@string/title_tutorial_button_text"
        android:id="@+id/title_tutorial_button"
        android:textSize="30dp"
        android:background="@color/lightblue1"
        android:layout_below="@+id/title_start_button"
        android:layout_alignStart="@+id/title_start_button"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:text="@string/title_about_button_text"
        android:id="@+id/title_about_button"
        android:textSize="30dp"
        android:background="@color/lightblue1"
        android:layout_below="@+id/title_tutorial_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/title_image"
        android:src="@drawable/title_logo"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title_start_button" />

</RelativeLayout>
