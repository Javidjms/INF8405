<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tp2.jms.meetingapp.Activity.ProfileEditionActivity"
    tools:showIn="@layout/activity_profile_edition"
    android:background="#4bbaf7">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_eml"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_Nam"
        android:layout_marginTop="70dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/but_don"
        android:textSize="25dp"
        android:elegantTextHeight="false"
        android:textColor="#ef0eeb"
        android:background="#ffffff"
        android:layout_marginTop="172dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your profile "
        android:id="@+id/edit_profile_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Show"
        android:textSize="30dp"
        android:layout_alignStart="@+id/but_don"
        android:layout_alignEnd="@+id/but_don" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:id="@+id/textView2"
        android:layout_above="@+id/txt_eml"
        android:layout_marginEnd="58dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/txt_Nam" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_below="@+id/txt_eml"
        android:layout_marginTop="73dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:spinnerMode="dialog"
        android:layout_below="@+id/spinner1" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:spinnerMode="dialog"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="false" />

</RelativeLayout>
