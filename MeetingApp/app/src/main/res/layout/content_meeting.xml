<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MeetingActivity"
    tools:showIn="@layout/activity_meeting"
    android:background="#4bbaf7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Setting"
        android:id="@+id/txt_meet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etxt_battery"
        android:layout_below="@+id/txt_meet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:text="Required Battery"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy Calculate"
        android:id="@+id/but_battery"
        android:layout_alignBottom="@+id/etxt_battery"
        android:layout_alignParentEnd="true"
        android:textColor="#ef0eeb"
        android:background="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etxt_tim"
        android:layout_below="@+id/but_battery"
        android:layout_alignEnd="@+id/etxt_battery"
        android:layout_marginTop="47dp"
        android:text="Meeting Time"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Calculate"
        android:id="@+id/but_tim"
        android:layout_alignBottom="@+id/etxt_tim"
        android:layout_alignParentEnd="true"
        android:textColor="#ef0eeb"
        android:background="#ffffff"
        android:textSize="15dp"
        android:layout_alignStart="@+id/but_battery" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etxt_plc"
        android:layout_below="@+id/but_tim"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:text="Meeting Place"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Calculate"
        android:id="@+id/but_plc"
        android:layout_alignBottom="@+id/etxt_plc"
        android:layout_alignEnd="@+id/but_tim"
        android:textColor="#ef0eeb"
        android:background="#ffffff"
        android:textSize="15dp"
        android:layout_alignStart="@+id/but_tim" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Notification Email To Members"
        android:id="@+id/but_eml"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/etxt_plc"
        android:layout_centerHorizontal="true"
        android:textColor="#ef0eeb"
        android:background="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/but_tim"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
