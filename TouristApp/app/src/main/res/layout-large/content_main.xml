<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/colorLightBlue">


    <ImageView
        android:layout_width="520dp"
        android:layout_height="521dp"
        android:id="@+id/imageView7"
        android:src="@drawable/tourist_app_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/title_start_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_button"
            android:text="@string/title_start_button_text"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/edit_db_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_button"
            android:text="@string/edit_db_button_text"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_button"
            android:text="@string/about_button_text"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</RelativeLayout>
